#!/bin/bash

export LD_LIBRARY_PATH="<%= node['mysql']['dir'] %>/mysql/lib:${LD_LIBRARY_PATH}"

PID_FILE=<%= node['epipe']['pid_file'] %>
if [ -f $PID_FILE ] ; then
 PID=`cat $PID_FILE`
 kill -0 $PID 2>&1 > /dev/null
 if [ $? -eq 0 ] ; then
     echo "A Epipe server is already running. Kill it first."
     exit 1
 fi
fi


<%= node['epipe']['base_dir'] %>/bin/epipe --reindex true --connection <%= @ndb_connectstring %> --database <%= @database %> --meta_database <%= @meta_database %> --elastic_addr <%= @elastic_addr %>  2>&1 > <%= node['epipe']['base_dir'] %>/epipe-reindex.log
